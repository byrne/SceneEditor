<?xml version="1.0"?>
<root>
	<editor name="NPCTypeSelector" component="ItemSelector" dataProvider="['路人', '守卫', '向导']" />
	<editor name="NumberStepper" component="NumericStepper" maximum="int.MAX" />
	
	<editor name="PositionEditor" component="HLayout" >
		<child component="NumberStepper" view_label="x" property="x" />
		<child component="NumberStepper" view_label="y" property="y" />
	</editor>
	
	<editor name="NPCEditor" component="VLayout" >
		<child component="Accordion">
			<child component="AccordionContent" label="'这是什么'" minWidth="300">
				<child component="Form">
					<child component="SingleLineText" view_label="名字" property="keyword" />
					<child component="SingleLineText" view_label="素材文件" property="resource" />
					<child component="SingleLineText" view_label="默认动作" property="default_action" default="IDLE"/>
					<child component="SingleLineText" view_label="默认语言" property="tip_msg" />
				</child>
			</child>
			<child component="AccordionContent" label="可选项" minWidth="300">
				<child component="Form">
					<child component="CheckBox" view_label="可见" property="enabled" default="true" />
					<child component="PositionEditor" view_label="坐标" />
				</child>
			</child>
		</child>
	</editor>
	<editor name="BossJuniorEditor" component="VLayout">
		<child component="NPCEditor" />
		<child component="ReferenceChooser" view_label="随从" property="minion" />
	</editor>
</root>